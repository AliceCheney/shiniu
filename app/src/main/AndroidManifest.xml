<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.olcow.shiniu">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_olcowlog_50dp"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_olcowlog_50dp"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <service android:name=".service.GetMessageService"></service>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".activity.LoginActivity" />
        <activity
            android:name=".activity.SettingActivity"
            android:theme="@style/SettingsTheme" />
        <activity
            android:name=".activity.EditUserinfoActivity"
            android:theme="@style/SettingsTheme" />
        <activity
            android:name=".activity.SearchActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity android:name=".activity.UserinfoActivity" />
        <activity
            android:name=".activity.SearchDetailsActivity"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity
            android:name=".activity.ChatActivity"
            android:theme="@style/SettingsTheme"></activity>
    </application>

</manifest>