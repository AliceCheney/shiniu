<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.olcow.shiniu.myview.CircleImageView
        android:id="@+id/recy_post_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/recy_post_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@+id/recy_post_avatar"
        app:layout_constraintTop_toTopOf="@id/recy_post_avatar"
        app:layout_constraintBottom_toTopOf="@+id/recy_post_time"/>

    <TextView
        android:id="@+id/recy_post_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/recy_post_name"
        app:layout_constraintLeft_toRightOf="@+id/recy_post_avatar"
        app:layout_constraintBottom_toBottomOf="@id/recy_post_avatar"/>

    <TextView
        android:id="@+id/recy_post_addfriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ 关注"
        android:textColor="@color/colorAccent"
        android:padding="5dp"
        android:background="@drawable/bg_button_sq"
        android:layout_margin="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/recy_post_avatar"
        app:layout_constraintBottom_toBottomOf="@id/recy_post_avatar"/>

    <TextView
        android:id="@+id/recy_post_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:maxLines="5"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@+id/recy_post_avatar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/recy_post_topimg_con"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/recy_post_content">

        <ImageView
            android:id="@+id/recy_post_img1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/recy_post_img2"
            />
        <ImageView
            android:id="@+id/recy_post_img2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toRightOf="@+id/recy_post_img1"
            app:layout_constraintRight_toLeftOf="@+id/recy_post_img3"
            app:layout_constraintTop_toTopOf="parent"
            />
        <ImageView
            android:id="@+id/recy_post_img3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toRightOf="@id/recy_post_img2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/recy_post_bottomimg_con"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/recy_post_topimg_con">

        <ImageView
            android:id="@+id/recy_post_img4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/recy_post_img5"
            />
        <ImageView
            android:id="@+id/recy_post_img5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toRightOf="@+id/recy_post_img4"
            app:layout_constraintRight_toLeftOf="@+id/recy_post_img6"
            app:layout_constraintTop_toTopOf="parent"
            />
        <ImageView
            android:id="@+id/recy_post_img6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toRightOf="@id/recy_post_img5"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/recy_post_head_view"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/recy_post_bottomimg_con"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</android.support.constraint.ConstraintLayout>