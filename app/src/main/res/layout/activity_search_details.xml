<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SearchDetailsActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/search_details_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/search_details_back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_chevron_left_black_24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="10dp"
            />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/search_details_con"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/search_details_back_img"
            app:layout_constraintRight_toLeftOf="@+id/search_details_search"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="10dp"
            android:background="@drawable/square_radius"
            >
            <ImageView
                android:id="@+id/search_details_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/search_details_edit"
                app:srcCompat="@drawable/ic_search_black_24dp"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/search_details_edit"
                android:hint="寻找有人缘"
                android:textSize="15sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@color/grey"
                android:imeOptions="actionSearch"
                android:maxLines="1"
                android:singleLine="true"
                app:met_hideUnderline="true"
                app:layout_constraintLeft_toRightOf="@id/search_details_img"
                app:layout_constraintRight_toLeftOf="@+id/search_details_edit_ref"/>
            <ImageView
                android:id="@+id/search_details_edit_ref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:layout_goneMarginRight="10dp"
                app:srcCompat="@drawable/ic_backspace_black_24dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/search_details_edit"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                />
        </android.support.constraint.ConstraintLayout>
        <TextView
            android:layout_marginRight="10dp"
            android:id="@+id/search_details_search"
            android:text="搜索"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/search_details_con"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/search_details_byuid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/search_details_header">

        <TextView
            android:id="@+id/search_details_byuid_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通过Nid号找到的用户"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="10dp" />

        <View
            android:id="@+id/search_details_byuid_desc_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="#1e000000"
            app:layout_constraintTop_toBottomOf="@+id/search_details_byuid_desc"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/search_details_byuid_con"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/search_details_byuid_desc_line">

            <com.olcow.shiniu.myview.CircleImageView
                android:id="@+id/search_details_byuid_avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/search_details_byuid_uid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加载失败"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/search_details_byuid_avatar"/>

            <TextView
                android:id="@+id/search_details_byuid_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="加载失败"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/search_details_byuid_uid"
                app:layout_constraintLeft_toRightOf="@id/search_details_byuid_avatar"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>
    <ProgressBar
        android:id="@+id/search_details_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/search_details_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <android.support.constraint.ConstraintLayout
        android:id="@+id/search_details_byname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/search_details_byuid">

        <TextView
            android:id="@+id/search_details_byname_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通过昵称找到的用户"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="10dp" />

        <View
            android:id="@+id/search_details_byname_desc_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="#1e000000"
            app:layout_constraintTop_toBottomOf="@+id/search_details_byname_desc"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/search_details_recyclerView"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/search_details_byname_desc_line"
            />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/search_details_nointernet"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="网络加载失败"
        app:layout_constraintTop_toBottomOf="@+id/search_details_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/search_details_none"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="没有找到与此相关的用户~"
        app:layout_constraintTop_toBottomOf="@+id/search_details_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>