<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/message_nologin_con"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/square_radius">
        <com.olcow.shiniu.myview.CircleImageView
            android:id="@+id/message_nologin_loginlog"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:elevation="30dp"
            android:src="@drawable/olcowlog_ye_touxiang"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        <TextView
            android:id="@+id/message_nologin_login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="登陆olcow,寻找地球上适合你的朋友!"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/message_nologin_loginlog"
            app:layout_constraintBottom_toTopOf="@id/message_nologin_login_title2"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/message_nologin_login_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="获得不错的聊天体验!"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/message_nologin_login_title"
            app:layout_constraintBottom_toTopOf="@id/message_nologin_login_button"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/message_nologin_login_button"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/message_nologin_login_title2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/bg_button_login"
            android:text="登陆/注册"
            android:textSize="16sp"
            android:textColor="@color/colorAccent"/>
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="olcow:聊天功能于2018/12/25制作完成"
        app:layout_constraintTop_toBottomOf="@+id/message_nologin_con"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>