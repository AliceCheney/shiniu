<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/square_radius"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp">

        <com.olcow.shiniu.myview.CircleImageView
            android:id="@+id/my_noactivity_loginlog"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:elevation="30dp"
            android:src="@drawable/olcowlog_ye_touxiang"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/my_noactivity_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="激动人心!仅差一步就能获得所有权限!"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/my_noactivity_loginlog"
            />

        <TextView
            android:id="@+id/my_noactivity_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请点击您注册邮箱中的激活链接。"
            android:layout_margin="10dp"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/my_noactivity_text1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/my_noactivity_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(如果没有请到垃圾箱中找找看)"
            app:layout_constraintTop_toBottomOf="@id/my_noactivity_text2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <Button
            android:id="@+id/refresh_activity_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="刷新激活状态"
            android:layout_margin="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/my_noactivity_text3"
            android:textColor="@color/colorAccent"
            android:background="@drawable/bg_button_login"/>

        <View
            android:id="@+id/my_noactivity_line"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_margin="30dp"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/refresh_activity_button"/>

        <LinearLayout
            android:id="@+id/send_activity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@+id/my_noactivity_line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="找不到了？"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重新发送"
                android:textColor="@color/colorAccent"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/my_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_settings_black_24dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>