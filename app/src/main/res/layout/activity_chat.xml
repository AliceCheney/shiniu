<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/chat_con"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ChatActivity">
    <TextView
        android:id="@+id/chat_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前环境异常，请退出重试"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/chat_rec"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/chat_send_con"
        >
    </android.support.v7.widget.RecyclerView>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/chat_send_con"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="30dp"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#1e000000"
            app:layout_constraintTop_toTopOf="parent">
        </View>
        <EditText
            android:id="@+id/chat_send_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="写私信"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            app:layout_constraintRight_toLeftOf="@+id/chat_send_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <Button
            android:id="@+id/chat_send_button"
            android:text="发送"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:visibility="invisible"
            android:background="@drawable/bg_button_sq_filling"
            android:layout_marginRight="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <Button
            android:id="@+id/chat_send_button_none"
            android:text="发送"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_button_sq_filling_grey"
            android:layout_marginRight="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>