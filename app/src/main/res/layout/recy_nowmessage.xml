<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.olcow.shiniu.myview.CircleImageView
        android:id="@+id/recy_nowmessage_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/olcowlog_ye_touxiang"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/recy_nowmessage_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="完全自杀手册"
        android:textSize="15sp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@+id/recy_nowmessage_avatar"
        app:layout_constraintTop_toTopOf="@id/recy_nowmessage_avatar"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/recy_nowmessage_nowmessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/recy_friends_name"
        app:layout_constraintLeft_toRightOf="@id/recy_friends_avatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/recy_friends_more"
        android:layout_marginStart="20dp" />

</android.support.constraint.ConstraintLayout>