<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorDrakAccent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/login_con"
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_shadow_login"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <android.support.constraint.ConstraintLayout
            android:id="@+id/login_top_style"
            android:layout_width="fill_parent"
            android:layout_marginRight="5dp"
            android:layout_height="100dp"
            android:background="@color/colorAccent"
            android:layout_marginEnd="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_olcowlog_50dp_white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
        </android.support.constraint.ConstraintLayout>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/usernameedit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/login_top_style"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            app:met_clearButton="true"
            android:hint="账号/邮箱"
            app:met_floatingLabel="normal"
            app:met_floatingLabelText="账号/邮箱"
            app:met_floatingLabelTextSize="12sp"
            app:met_errorColor="@color/red"
            app:met_primaryColor="@color/colorAccent"
            app:met_baseColor="@color/black"
            app:met_helperTextColor="@color/red"
            app:met_underlineColor="@color/colorAccent"
            android:inputType="textEmailAddress"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/passwordedit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/usernameedit"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:hint="密码"
            app:met_floatingLabel="normal"
            app:met_floatingLabelText="密码"
            app:met_floatingLabelTextSize="12sp"
            app:met_errorColor="@color/red"
            app:met_primaryColor="@color/colorAccent"
            app:met_baseColor="@color/black"
            app:met_helperTextColor="@color/red"
            app:met_underlineColor="@color/colorAccent"
            android:inputType="textPassword"
            />
        <CheckBox
            android:visibility="gone"
            android:checked="false"
            android:id="@+id/eyepassword"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="30dp"
            android:button="@drawable/ic_remove_red_eye_black"
            app:layout_constraintRight_toRightOf="@+id/passwordedit"
            app:layout_constraintTop_toBottomOf="@+id/usernameedit"
            app:layout_constraintBottom_toBottomOf="@+id/passwordedit"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/reg_usernameedit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/login_top_style"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            app:met_clearButton="true"
            android:hint="账号"
            app:met_floatingLabel="normal"
            app:met_floatingLabelText="账号"
            app:met_floatingLabelTextSize="12sp"
            app:met_errorColor="@color/red"
            app:met_primaryColor="@color/colorAccent"
            app:met_baseColor="@color/black"
            app:met_helperTextColor="@color/red"
            app:met_underlineColor="@color/colorAccent"
            android:inputType="textEmailAddress"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/reg_passwordedit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/reg_usernameedit"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:hint="密码"
            app:met_floatingLabel="normal"
            app:met_floatingLabelText="密码"
            app:met_floatingLabelTextSize="12sp"
            app:met_errorColor="@color/red"
            app:met_primaryColor="@color/colorAccent"
            app:met_baseColor="@color/black"
            app:met_helperTextColor="@color/red"
            app:met_underlineColor="@color/colorAccent"
            android:inputType="textPassword"
            />
        <CheckBox
            android:visibility="gone"
            android:checked="false"
            android:id="@+id/reg_eyepassword"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="30dp"
            android:button="@drawable/ic_remove_red_eye_black"
            app:layout_constraintRight_toRightOf="@+id/reg_passwordedit"
            app:layout_constraintTop_toBottomOf="@+id/reg_usernameedit"
            app:layout_constraintBottom_toBottomOf="@+id/reg_passwordedit"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/reg_emailedit"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/reg_passwordedit"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            app:met_clearButton="true"
            android:hint="邮箱"
            app:met_floatingLabel="normal"
            app:met_floatingLabelText="邮箱"
            app:met_floatingLabelTextSize="12sp"
            app:met_errorColor="@color/red"
            app:met_primaryColor="@color/colorAccent"
            app:met_baseColor="@color/black"
            app:met_helperTextColor="@color/red"
            app:met_underlineColor="@color/colorAccent"
            android:inputType="textEmailAddress"
            />

        <Button
            android:id="@+id/login_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passwordedit"
            android:background="@drawable/bg_button_login"
            android:text="登陆"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"/>

        <ProgressBar
            android:id="@+id/login_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passwordedit"/>

        <Button
            android:id="@+id/reg_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reg_emailedit"
            android:background="@drawable/bg_button_login"
            android:text="注册"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"/>

        <ProgressBar
            android:id="@+id/reg_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reg_emailedit"/>


        <View
            android:id="@+id/login_line_black"
            android:layout_margin="30dp"
            android:layout_height="0.7dp"
            android:background="#000000"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/login_progress"/>

        <LinearLayout
            android:id="@+id/reg_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            app:layout_constraintTop_toBottomOf="@+id/login_line_black"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                android:id="@+id/reg_d_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="还没有账号？"
                />

            <TextView
                android:id="@+id/login_reg_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="30dp"
                android:text="注册"
                />
        </LinearLayout>

        <View
            android:visibility="gone"
            android:id="@+id/reg_line_black"
            android:layout_margin="30dp"
            android:layout_height="0.7dp"
            android:background="#000000"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/reg_progress"/>

        <LinearLayout
            android:id="@+id/login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            app:layout_constraintTop_toBottomOf="@+id/reg_line_black"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone">
            <TextView
                android:id="@+id/login_d_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="已有账号？"
                />

            <TextView
                android:id="@+id/reg_login_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="30dp"
                android:text="登陆"
                />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>